<div class="btn-toolbar">
  <a class="btn btn-primary" href="<%= new_backend_offline_bank_path %>"><i class="icon-plus"></i> 添加银行</a>
</div>
<div class="well">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>编号</th>
          <th>银行名称</th>
          <th>详细信息</th>
          <th>前台</th>
          <th style="width: 50px;"></th>
        </tr>
      </thead>
      <tbody>
        <% @banks.each do |f| %>
          <tr id="fl<%= f.id %>">
            <td><%= f.id %></td>
            <td><%= link_to f.name, edit_backend_offline_bank_path(f) %></td>
            <td><%= f.detail %></td>
            <td><%= f.status == 'on' ? "显示" : "不显示"%></td>
            <td>
              <%= link_to_edit edit_backend_offline_bank_path(f) %>
              <%= link_to_delete backend_offline_bank_path(f)%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
