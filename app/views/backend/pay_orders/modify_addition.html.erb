<div class="well">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>编号</th>
        <th>用户</th>
        <th>金额</th>
        <th>说明</th>
        <th>备注</th>
        <th>充值时间</th>
        <th style="width: 26px;"></th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @cash_flow.id %></td>
          <td>
            <% if @cash_flow.to_user %>
              <%= link_to @cash_flow.to_user.name, backend_lender_path(@cash_flow.to_user), :target => '_blank' %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td><%= rmb @cash_flow.amount %></td>
          <td><%= @cash_flow.description %></td>
          <td><%= @cash_flow.addition %></td>
          <td><%= format_time @cash_flow.created_at %></td>
        </tr>
    </tbody>
  </table>
</div>
<div class="search-well">
  <%= form_tag update_addition_backend_pay_orders_path, :method => "POST", :class => "form-inline validate-form", :role => "form", :novalidate=>"novalidate" do %>
    <div class="control-group">
      <div class='controls'>
      <%= text_field_tag :addition, '', :placeholder => "备注", :class => 'input-xlarge', :'data-rule-required'=>"true" %><br>
      <%= hidden_field_tag :id, @cash_flow.id %>
      </div>
    </div>
    <%= submit_tag "修改", :class => "btn" %>
  <% end %>
</div>