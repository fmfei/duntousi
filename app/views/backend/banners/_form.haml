.well
  #myTabContent.tab-content
    #home.tab-pane.active.in
      %label 名称
      = f.text_field :title, :class => "input-xlarge", 'data-rule-required' => true
      %label 图片
      = f.file_field :pic, :class => "btn"
      %label 链接地址
      = f.text_field :url, 'data-rule-required' => true
      %label 状态
      = f.select :status, [["显示","true"],["不显示","false"]]
      %label 类别
      = f.select :for_app, [["电脑",false],["手机app",true]]
.btn-toolbar.form-actions
  = f.submit '保存', :class => 'btn btn-primary'
  - if action_name == 'edit' && (can? :delete, 'backend/banners')
    = link_to '删除', backend_banner_path(@banner), :method => 'delete', :class => 'btn', :confirm => '确认删除?'
:javascript
  $("form").validate();