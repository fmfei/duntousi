<div class="search-well">
  <%= form_tag({:action => action_name}, {:class => "form-inline", :method => 'get'}) do %>
    <%= text_field_tag :start_date, @start.strftime('%Y-%m-%d') %>
     至
    <%= text_field_tag :end_date, @end.strftime('%Y-%m-%d') %>
    <%= submit_tag "搜索", :class => "btn" %>
  <% end %>
</div>
<script type="text/javascript">
$(function (){
  $('#start_date').datepicker({
    inline: true
  });
  $('#end_date').datepicker({
    inline: true
  });
})
</script>
