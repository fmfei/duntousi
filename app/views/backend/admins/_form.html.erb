<div class="well">
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active">
        <label>手机号</label>
        <%= f.text_field :mobile, :class => 'input-xlarge', :required => true %>
        <label>邮箱</label>
        <%= f.text_field :email, :class => 'input-xlarge', :required => true %>
        <%= f.fields_for :info do |info_form| %>
          <label>姓名</label>
          <%= info_form.text_field :name, :class => 'input-xlarge', :required => true %>
        <% end %>
        <label>密码</label>
        <%= f.password_field :password, :class => 'input-xlarge', :required => true %>
        <label>确认密码</label>
        <%= f.password_field :password_confirmation, :class => 'input-xlarge', :required => true %>
        <label>管理员类型</label>
        <% @roles.each do |role| %>
          <%= check_box_tag "user[role_ids][]", role.id, @admin.roles.include?(role) %>
          <%= role.name %>
          <br>
        <% end %>
        <br>
        <!-- <label>总渠道</label>
        <%= f.select :source, [['', ''], ['蔡霖', 'cai'], ['9lianmeng', '9lianmeng']], :class => 'input-xlarge', :required => true %>
        <label>分渠道</label>
        <%= f.select :channel, [['全部', ''], ['岳阳', 'yueyang'], ['芷江县', 'zhijiang']], :class => 'input-xlarge', :required => true %> -->
    </div>
  </div>
</div>
<div class="btn-toolbar form-actions">
  <input type='submit' class="btn btn-primary" value='保存'>
  <% if action_name == 'edit' && (can? :delete, 'backend/admins') %>
    <%= link_to '删除', backend_admin_path(@admin), :method => 'delete', :class => 'btn', :confirm => '确认删除此权限?'%>
  <% end %>
  <div class="btn-group">
  </div>
</div>
<script type="text/javascript">
$(function(){
  $('form').validate();
})
</script>