<% if current_user && current_user.auth_realname == 1 %>
  <%= form_for @bid, :url => create_rookie_bid_invests_path do |f| %>
    <label style='display: inline-block;margin-right: 28px;'>新手体验金</label>
    <%= rmb current_user.user_cash.rookie_amount %>
    <label style='display: inline-block;margin-left: 40px;'>投资金额</label>
    <%= f.text_field :invest_amount, :'autocomplete'=>"off", :class => 'input-xlarge', :style => 'margin-right:20px', value: 2000, disabled: true %>
    <%= f.hidden_field :loan_id, :value => params[:loan_id] %>
    <input type='submit' class="btn btn-primary" value='确认投标' id='confirmInvest' onclick="javascript:$('#confirmInvest').attr('disabled', 'disabled');$('#new_rookie_bid').submit();">
  <% end %>
<% else %>
  <%= link_to '请先进行实名认证', real_name_account_users_path, :style=>'color:#ff6666;' %>
<% end %>