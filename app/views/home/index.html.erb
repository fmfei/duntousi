$(function(){
  $('.seat-left span').each(function(index, el) {
    var i=1;
    $(this).click(function(event) {
      if(i==1){
        $(this).find("a").addClass('chooseJ');
        i=0;
      }else{
        $(this).find("a").removeClass('chooseJ');
        i=1;
      }
    });
  });
})

$("#sumit_btn1").click(function(){
  var chooseBtn = $(".chooseJ");
  var listCheck = new Array();
  for(var i = 0; i < chooseBtn.length; i++){
    listCheck.push(chooseBtn[i].name)
  }
  var radioCheck = $("input[name='radstatus1']:checked").val();
  $.ajax({
    url: "/seats/update_status",
    data: {
      check_seat: listCheck,
      check_status: radioCheck
    },
    success: function(data){
      if(data["status"] == 0){
        alert("更新成功")
        window.location.reload();
      }else{
        alert(data["errmsg"])
      }
    },
    error: function(){
      alert("未知问题，可以联系管理者查看")
    }
  })
})

