<div class='right'>
  <div class="czjl_top"></div>
    <div class="tongtit">
      <div class="xshi">抽奖记录</div>
    </div>

      <div class="contents">
         <div class="czjl">
            <div class="czjltitle">抽奖时间</div>
            <div class="czjltitle">抽奖记录</div>
            <div class="czjltitle">状态</div>
            <div class="czjltitle">奖励</div>
         </div>
         <% @lucky_guesses.each do |code| %>
         <div class="czjl">
            <div class="czjltitle"><%= code.created_at.try(:strftime, "%Y/%m/%d/ %H:%M") %></div>
            <div class="czjltitle"><%= code.guess == "single" ? "单数" : "双数" %></div>
            <div class="czjltitle"><%= translate_lucky_status code.result %></div>
            <div class="czjltitle"><%= code.prize %></div>
         </div>
         <% end %>
         <%= will_paginate @lucky_guesses %>
      </div>
</div>