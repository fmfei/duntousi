    <div class="tongtit">
      <div><%= link_to "实名认证", real_name_account_users_path %><small><%= '(已认证)' if current_user.auth_realname == 1 %></small></div>
      <div><%= link_to "手机认证", auth_phone_account_users_path %></div>
      <div class="xshi">邮箱认证</div>
    </div>
      <div class='row'>
        <div class='col-sm-12'>
          <div class='tabbable'>
            <div class='tab-content'>
              <div class='tab-pane active' id=''>
                <div class='dtitles'>
                  <%= form_note_account flash %>
                </div>
      	        <% if current_user.confirmed_at.present? %>
                  <div class="imgbox">
                      <img src="<%= asset_url('frontend/email.png') %>" />
                      <p><%= current_user.email %></p>
                  </div>
      	        <% else %>
                  
                  <%= form_for(current_user, url: confirmation_account_users_path, html: { method: :post, id: 'auth_email' }) do |f| %>
                    <div class="dtitles">
                        <div class="righter">
                            <div>
                              <span class="xjieshi">&nbsp;&nbsp;&nbsp;邮箱</span>
                              <span class="xjieshi"><%= f.email_field :email, :value => current_user.email, placeholder: '请输入邮箱', autofocus: true, 'data-rule-required': true,  'data-rule-email': true  %></span>
                            </div>
                        </div>
                    </div>

                    <div class='dtitle'>
                      <%= f.submit "发送验证邮件", :class => "hqyzm", :id => "send" %>
                    </div>
                  <% end %>

                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<script type="text/javascript">
