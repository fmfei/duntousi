
<div class='right'>
    <div class="czjl_top"></div>
    <div class="tongtit">
      <div class="xshi">新手标项目</div>
    </div>
      <div class='row'>
        <div class='col-sm-12'>
          <div class='tabbable'>
            <div class='tab-content'>
              <div class='tab-pane active' id=''>
                <table class='table' style='margin-bottom:0;'>
                  <thead class="left_20">
                    <tr>
                      <td>借款标题</td>
                      <td>金额(元)</td>
                      <td>期限(天)</td>
                      <td>年利率(%)</td>
                      <td>投标时间</td>
                      <td>借出金额</td>
                    </tr>
                  </thead>
                  <tbody class="left_20">
                    <% @bids.each do |bid| %>
                    <tr>
                      <td><%= link_to bid.rookie_loan.title, "/show_rookie_invest?id=#{bid.rookie_loan.id}", :target => '_blank' %></td>
                      <td><%= bid.rookie_loan.amount %> </td>
                      <td><%= bid.invest_day %></td>
                      <td><%= bid.interest %></td>
                      <td><%= format_time(bid.created_at) %></td>
                      <td><%= rmb bid.invest_amount %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= will_paginate @bids %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>